<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>class-fusion-maven-plugin-parent</artifactId>
        <groupId>io.github.xausky</groupId>
        <version>0.1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>class-fusion-maven-plugin-example-spring</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <version>1.3.6.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>io.github.xausky</groupId>
            <artifactId>class-fusion-maven-plugin-example-base</artifactId>
            <version>0.1.0</version>
        </dependency>
        <dependency>
            <groupId>io.github.xausky</groupId>
            <artifactId>class-fusion-maven-plugin-example-ext</artifactId>
            <version>0.1.0</version>
        </dependency>
        <dependency>
            <groupId>io.github.xausky</groupId>
            <artifactId>class-fusion-core</artifactId>
            <version>0.1.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.github.xausky</groupId>
                <artifactId>class-fusion-maven-plugin</artifactId>
                <version>0.1.0</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>fusion</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <configuration>
                    <executable>java</executable>
                    <arguments>
                        <argument>-classpath</argument>
                        <classpath/>
                        <argument>io.github.xausky.cfmpe.Example</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>